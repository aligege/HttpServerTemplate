            <div style="text-align:center;padding-top:10px">
                <button v-if="is_add" class="btn shiny btn-primary " type="button" @click="add">新增俱乐部</button>
                <button v-if="!is_add" class="btn shiny btn-primary " type="button" @click="update">修改俱乐部</button>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        var vm_op = new Vue({
            el: '#custom',
            data: 
            {
                is_add:false,
                id:0,
                invite_code:"",
                title:"",
                url:"",
                region:"",
                provience:"",
                city:"",
                service:"",
                open:0
            },
            methods: 
            {
                init:function(is_add,club)
                {
                    if(!club)
                    {
                        club={}
                    }
                    this.is_add=is_add
                    this.id=club.id||0
                    this.invite_code=club.invite_code||""
                    this.title=club.title||""
                    this.url=club.url||""
                    this.region=club.region||""
                    this.provience=club.provience||""
                    this.city=club.city||""
                    this.service=club.service||""
                    this.open=club.open||0
                },
                add:function()
                {
                    let club=
                    {
                        club:{
                            id:this.id,
                            invite_code:this.invite_code,
                            title:this.title,
                            url:this.url,
                            region:this.region,
                            provience:this.provience,
                            city:this.city,
                            service:this.service,
                            open:this.open
                        }
                    }
                    let self = this
                    $.ajax({
                        type: "POST",
                        url: "/club/add",
                        dataType: 'json',
                        data:club,
                        xhrFields: {
                            withCredentials: true
                        },
                        crossDomain: true,
                        success:function(response)
                        {
                            if(response.errcode)
                            {
                                layer.msg(response.errcode.des, {icon: 5, time: 2000})
                            }
                            else
                            {
                                vm_club_list.clubs.unshift(response.club)
                                layer.closeAll()
                                layer.msg("俱乐部添加成功", {icon: 1, time: 2000})
                            }
                        },
                        error:function(err){
                            layer.msg("请求错误", {icon: 5, time: 2000})
                        },
                    })
                },
                update:function()
                {
                    let club=
                    {
                        club:{
                            id:this.id,
                            invite_code:this.invite_code,
                            title:this.title,
                            url:this.url,
                            region:this.region,
                            provience:this.provience,
                            city:this.city,
                            service:this.service,
                            open:this.open
                        }
                    }
                    let self = this
                    $.ajax({
                        type: "POST",
                        url: "/club/update",
                        dataType: 'json',
                        data:club,
                        xhrFields: {
                            withCredentials: true
                        },
                        crossDomain: true,
                        success:function(response)
                        {
                            if(response.errcode)
                            {
                                layer.msg(response.errcode.des, {icon: 5, time: 2000})
                            }
                            else
                            {
                                for(let i=0;i<vm_club_list.clubs.length;++i)
                                {
                                    let r = vm_club_list.clubs[i]
                                    if(r.id==response.club.id)
                                    {
                                        vm_club_list.clubs[i]=response.club
                                        break
                                    }
                                }
                                layer.closeAll()
                                vm_club_list.clubs.sort((a,b)=>
                                {
                                    return b.id-a.id
                                })
                                layer.msg("服务器更新成功", {icon: 1, time: 2000})
                            }
                        },
                        error:function(err){
                            layer.msg("请求错误", {icon: 5, time: 2000})
                        },
                    })
                }
            }
        });
    </script>
