<script type="text/javascript">
    var vm_club_list = new Vue({
        el: '#app',
        data: 
        {
            clubs:[],
            cur: 0,
            all: 0,
            total: 0,
            url:window.location.href
        },
        components:
        {
            'vue-nav': Vnav
        },
        created()
        {
            this.updateDates(0)
        },
        methods:
        {
            add()
            {
                vm_op.init(true)
                layer.open({
                    type: 1,
                    title: '俱乐部-新增俱乐部',
                    shadeClose: true, //点击遮罩关闭层
                    maxmin: true,
                    shade: 0.5,
                    area : ['700px' , '570px'],
                    content: $('#id_club')
                });
            },
            remove(club_id)
            {
                let self = this
                $.ajax({
                    type: "POST",
                    url: "/club/remove",
                    dataType: 'json',
                    data:{
                        club_id:club_id,
                    },
                    xhrFields: {
                        withCredentials: true
                    },
                    crossDomain: true,
                    success:function(response)
                    {
                        if(response.errcode)
                        {
                            layer.msg(response.errcode.des, {icon: 5, time: 2000})
                            return
                        }
                        for(let i=0;i<self.clubes.length;++i)
                        {
                            let s = self.clubes[i]
                            if(s.id==club_id)
                            {
                                self.clubes.splice(i,1)
                                break
                            }
                        }
                        layer.msg("删除成功", {icon: 1, time: 2000})
                    },
                    error:function(){
                
                    },
                })
            },
            modify(club)
            {
                vm_op.init(false,club)
                layer.open({
                    type: 1,
                    title: '比赛-修改比赛',
                    shadeClose: true, //点击遮罩关闭层
                    maxmin: true,
                    shade: 0.5,
                    area : ['700px' , '570px'],
                    content: $('#id_club')
                });
            },
            convertTime:function(time)
            {
                return moment(time).format('YYYY-M-D H:mm:ss')
            },
            onPage:function(page)
            {
                this.updateDates(page-1)
            },
            updateDates:function(page)
            {
                let self = this
                $.ajax({
                    type: "POST",
                    url: "/club/clublist",
                    dataType: 'json',
                    data:JSON.stringify({
                    }),
                    xhrFields: {
                        withCredentials: true
                    },
                    crossDomain: true,
                    success:function(response)
                    {
                        if(response.err)
                        {
                            layer.msg(response.err, {icon: 5, time: 2000})
                            return
                        }
                        self.cur=response.page
                        self.all=response.total_page
                        self.total=response.count
                        self.clubs=response.clubs||[]
                        self.clubs.sort((a,b)=>
                        {
                            return b.id-a.id
                        })
                    },
                    error:function(){
                
                    },
                })
            },
            checkusers:function(page)
            {

            }
        }
    });
</script>
<div>
    <div id="custom">
        <div id="id_club" style="display: none;padding:50px;padding-top:20px;padding-bottom:10px">
            <table id="tb_bulletin_list" class="table table-bordered table-striped">
                <tbody>
                    <tr v-if="!is_add">
                        <td>俱乐部id</td>
                        <td>
                            <input type="number" step="1" class="form-control" v-model="id" :disabled="true">
                        </td>
                    </tr>
                    <tr>
                        <td>邀请码</td>
                        <td>
                            <input type="text" class="form-control" v-model="invite_code">
                        </td>
                    </tr>
                    <tr>
                        <td>俱乐部名称</td>
                        <td>
                            <input type="text" class="form-control" v-model="title">
                        </td>
                    </tr>
                    <tr>
                        <td>俱乐部Url</td>
                        <td>
                            <input type="text" class="form-control" v-model="url">
                        </td>
                    </tr>
                    <tr>
                        <td>俱乐部区域</td>
                        <td>
                            <input type="text" class="form-control" v-model="region">
                        </td>
                    </tr>
                    <tr>
                        <td>俱乐部省</td>
                        <td>
                            <input type="text" class="form-control" v-model="provience">
                        </td>
                    </tr>
                    <tr>
                        <td>俱乐部城市</td>
                        <td>
                            <input type="text" class="form-control" v-model="city">
                        </td>
                    </tr>
                    <tr>
                        <td>联系方式</td>
                        <td>
                            <input type="text" class="form-control" v-model="service">
                        </td>
                    </tr>
