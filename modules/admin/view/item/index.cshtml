    <script type="text/javascript">
        var vm_op = new Vue({
            el: '#custom',
            data: 
            {
                is_add:false,
                id:0,
                coin:0,
                cost_coin:0,
                name:"",
                type:0,
                des:"",
                icon:"image/icon/ticket",
                //是否可以赠送
                can_give:0,
                //是否可以兑换
                can_exchange:0,
                can_buy:0
            },
            methods: 
            {
                init:function(is_add,item)
                {
                    if(!item)
                    {
                        item={}
                    }
                    this.is_add=is_add
                    this.id=item.id||0
                    this.coin=item.coin||0
                    this.cost_coin=item.cost_coin||0,
                    this.name=item.name||""
                    this.type=item.type||0
                    this.des=item.des||""
                    this.icon=item.icon||"image/icon/ticket"
                    this.can_give=item.can_give||0
                    this.can_exchange=item.can_exchange||0
                    this.can_buy=item.can_buy||0
                },
                add:function()
                {
                    let item=
                    {
                        item:{
                            id:this.id,
                            coin:this.coin,
                            cost_coin:this.cost_coin,
                            name:this.name,
                            type:this.type,
                            des:this.des,
                            icon:this.icon,
                            can_give:this.can_give,
                            can_exchange:this.can_exchange,
                            can_buy:this.can_buy
                        }
                    }
                    let self = this
                    $.ajax({
                        type: "POST",
                        url: "/item/add",
                        dataType: 'json',
                        data:item,
                        xhrFields: {
                            withCredentials: true
                        },
                        crossDomain: true,
                        success:function(response)
                        {
                            if(response.errcode)
                            {
                                layer.msg(response.errcode.des, {icon: 5, time: 2000})
                            }
                            else
                            {
                                vm_item_list.items.unshift(response.item)
                                layer.closeAll()
                                layer.msg("服务器添加成功", {icon: 1, time: 2000})
                            }
                        },
                        error:function(err){
                            layer.msg("请求错误", {icon: 5, time: 2000})
                        },
                    })
                },
                update:function()
                {
                    let item=
                    {
                        item:{
                            id:this.id,
                            coin:this.coin,
                            cost_coin:this.cost_coin,
                            name:this.name,
                            type:this.type,
                            des:this.des,
                            icon:this.icon,
                            can_give:this.can_give,
                            can_exchange:this.can_exchange,
                            can_buy:this.can_buy
                        }
                    }
                    let self = this
                    $.ajax({
                        type: "POST",
                        url: "/item/update",
                        dataType: 'json',
                        data:item,
                        xhrFields: {
                            withCredentials: true
                        },
                        crossDomain: true,
                        success:function(response)
                        {
                            if(response.errcode)
                            {
                                layer.msg(response.errcode.des, {icon: 5, time: 2000})
                            }
                            else
                            {
                                for(let i=0;i<vm_item_list.items.length;++i)
                                {
                                    let r = vm_item_list.items[i]
                                    if(r.id==response.item.id)
                                    {
                                        vm_item_list.items[i]=response.item
                                        break
                                    }
                                }
                                layer.closeAll()
                                vm_item_list.items.sort((a,b)=>
                                {
                                    return b.id-a.id
                                })
                                layer.msg("服务器更新成功", {icon: 1, time: 2000})
                            }
                        },
                        error:function(err){
                            layer.msg("请求错误", {icon: 5, time: 2000})
                        },
                    })
                }
            }
        });
    </script>
